<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_nav_host"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.nippon.view.login.LoginFragment"
        android:label="login_fragment"
        tools:layout="@layout/login_fragment" >
        <argument
            android:name="myarg"
            android:defaultValue="null"/>
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_loginFragment_to_termsAndConditionsFragmnet"
            app:destination="@id/termsAndConditionsFragmnet" />
        <action
            android:id="@+id/action_loginFragment_to_privacyPolicyFragment"
            app:destination="@id/privacyPolicyFragment" />
        <action
            android:id="@+id/action_loginFragment_to_home"
            app:destination="@id/home" />
        <action
            android:id="@+id/action_loginFragment_to_branchFragment"
            app:destination="@id/branchFragment" />
        <action
            android:id="@+id/action_loginFragment_to_routeControllerFragment"
            app:destination="@id/routeControllerFragment" />
    </fragment>


    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.nippon.view.signUp.SignUpFragment"
        android:label="sign_up_fragment"
        tools:layout="@layout/sign_up_fragment" >
        <action
            android:id="@+id/action_signUpFragment_to_home"
            app:destination="@id/home" />
        <action
            android:id="@+id/action_signUpFragment_to_privacyPolicyFragment"
            app:destination="@id/privacyPolicyFragment" />
        <action
            android:id="@+id/action_signUpFragment_to_termsAndConditionsFragmnet"
            app:destination="@id/termsAndConditionsFragmnet" />
        <action
            android:id="@+id/action_signUpFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>


    <fragment
        android:id="@+id/termsAndConditionsFragmnet"
        android:name="com.example.nippon.view.settings.TermsAndConditionsFragment"
        android:label="fragment_terms_and_conditions_fragmnet"
        tools:layout="@layout/fragment_terms_and_conditions_fragmnet" >
        <action
            android:id="@+id/action_termsAndConditionsFragmnet_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/privacyPolicyFragment"
        android:name="com.example.nippon.view.settings.PrivacyPolicyFragment"
        android:label="fragment_privacy_policy"
        tools:layout="@layout/fragment_privacy_policy" >
        <action
            android:id="@+id/action_privacyPolicyFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/home"
        android:name="com.example.nippon.view.home.Home"
        android:label="home_fragment"
        tools:layout="@layout/home_fragment" >
        <action
            android:id="@+id/action_home_to_branchFragment"
            app:destination="@id/branchFragment" />
        <action
            android:id="@+id/action_home_to_routeControllerFragment"
            app:destination="@id/routeControllerFragment" />
    </fragment>
    <fragment
        android:id="@+id/branchFragment"
        android:name="com.example.nippon.view.home.branch.BranchFragment"
        android:label="BranchFragment" >
        <action
            android:id="@+id/action_branchFragment_to_fltFragment"
            app:destination="@id/fltFragment" />
    </fragment>
    <fragment
        android:id="@+id/fltFragment"
        android:name="com.example.nippon.view.home.branch.flt.FltFragment"
        android:label="FltFragment" />
    <fragment
        android:id="@+id/routeControllerFragment"
        android:name="com.example.nippon.view.home.routecountroler.RouteControllerFragment"
        android:label="RouteControllerFragment" >

        <action
            android:id="@+id/action_routeControllerFragment_to_assignVehicleFragment"
            app:destination="@id/assignVehicleFragment" >

        </action>
    </fragment>
    <fragment
        android:id="@+id/assignVehicleFragment"
        android:name="com.example.nippon.view.home.routecountroler.AssignVehicleFragment"
        android:label="AssignVehicleFragment" >
        <argument
            android:name="myArg"
            app:argType="com.example.nippon.model.SerialData"
            />
    </fragment>

</navigation>